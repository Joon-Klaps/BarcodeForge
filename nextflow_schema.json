{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/andersen-lab/barcodeforge/master/nextflow_schema.json",
  "title": "andersen-lab/barcodeforge pipeline parameters",
  "description": "This pipeline enables the generation of barcodes for use with the Freyja.",
  "type": "object",
  "$defs": {
    "tree_options": {
      "title": "Tree options",
      "type": "object",
      "description": "",
      "default": "",
      "properties": {
        "tree_file": {
          "type": "string",
          "fa_icon": "fas fa-tree"
        },
        "tree_file_format": {
          "type": "string",
          "default": "newick"
        },
        "lineages": {
          "type": "string"
        },
        "barcode_prefix": {
          "type": "string",
          "default": "pathogen",
          "fa_icon": "fas fa-barcode"
        }
      },
      "required": ["tree_file", "lineages"]
    },
    "sequence_options": {
      "title": "Sequence options",
      "type": "object",
      "description": "",
      "default": "",
      "properties": {
        "reference_genome": {
          "type": "string"
        },
        "alignment": {
          "type": "string",
          "fa_icon": "fas fa-stream"
        }
      },
      "required": ["reference_genome", "fasta"]
    },
    "generic_options": {
      "title": "Generic options",
      "type": "object",
      "fa_icon": "fas fa-file-import",
      "description": "Less common options for the pipeline, typically set in a config file.",
      "help_text": "These options are common to all nf-core pipelines and allow you to customise some of the core preferences for how the pipeline runs.\n\nTypically these options would be set in a Nextflow config file loaded for all pipeline runs, such as `~/.nextflow/config`.",
      "properties": {
        "outdir": {
          "type": "string",
          "default": "results",
          "fa_icon": "fas fa-folder-open"
        },
        "validate_params": {
          "type": "boolean",
          "default": true,
          "fa_icon": "fas fa-toggle-on"
        },
        "version": {
          "type": "boolean",
          "description": "Display version and exit.",
          "fa_icon": "fas fa-question-circle",
          "hidden": true
        },
        "trace_report_suffix": {
          "type": "string",
          "fa_icon": "far calendar",
          "description": "Suffix to add to the trace report filename. Default is the date and time in the format yyyy-MM-dd_HH-mm-ss.",
          "hidden": true
        },
        "publish_dir_mode": {
          "type": "string",
          "default": "copy"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/$defs/tree_options"
    },
    {
      "$ref": "#/$defs/sequence_options"
    },
    {
      "$ref": "#/$defs/generic_options"
    }
  ]
}
